@model IEnumerable<GreenBite.Domain.Entities.Salad>

@{
    ViewBag.Title = "Admin: All Salads";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-4 rounded" style="background-color: #e6f4ea;">
    <!-- Light green tint -->
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0">All Salads</h3>
        </div>

        <div class="card-body bg-white">
            <table class="table table-striped table-hover table-bordered rounded">
                <thead class="thead-light">
                    <tr>
                        <th class="text-end">ID</th>
                        <th>Name</th>
                        <th class="text-end">Price</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-end">@item.SaladID</td>
                            <td>
                                @Html.ActionLink(item.Name, "Edit", new { item.SaladID }, new { @class = "text-success fw-bold" })
                            </td>
                            <td class="text-end">@item.Price.ToString("c")</td>
                            <td class="text-center">
                                @using (Html.BeginForm("Delete", "Admin"))
                                {
                                    @Html.Hidden("SaladID", item.SaladID)
                                    <input type="submit" class="btn btn-outline-danger btn-sm" value="Delete" />
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer bg-white text-end">
            @Html.ActionLink("Add a new salad", "Create", null, new { @class = "btn btn-success" })
        </div>
    </div>
</div>

